---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ site.title }}</title>
    <link href="{{ site.url }}/atom.xml" rel="self"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ site.url }}</id>

    {% for post in site.categories.django limit:10 %}
        {% unless post.type == "page" or post.draft %}
            <entry>
                <title>{{ post.title | xml_escape }}</title>
                <link href="http://justcramer.com{{ post.url }}"/>
                <updated>{{ post.date | date_to_xmlschema }}</updated>
                <id>{{ site.url }}{{ post.url }}</id>
                <content type="html">{% if post.summary %}{{ post.summary | xml_escape }}{% else %}{{ post.content | strip_html | truncate: 300 | xml_escape }}{% endif %}</content>
                <author>
                    <name>David Cramer</name>
                    <url>{{ site.url }}</url>
                </author>
            </entry>
        {% endunless %}
    {% endfor %}
</feed>
